@{
    ViewData["Title"] = "Ogretim Uyesi Dashboard";
    ViewData["CalendarDataUrl"] = Url.Action("OgretimUyesiCalendarData", "Dashboard");
}

<h1>Ogretim Üyesi Dashboard</h1>

<div class="row">
    <div class="col-md-6">
        <h2>Onay Bekleyen Randevular</h2>
        <ul class="list-group">
            @foreach (var randevu in ViewBag.Randevular)
            {
                <li class="list-group-item">
                    Asistan: @randevu.Asistan.Ad
                    <br />
                    Tarih: @randevu.RandevuMusaitlikDurumu.BaslangicSaati.ToString("g")
                </li>
            }
        </ul>
    </div>
    <div class="col-md-6">
        <h2>Randevu Müsaitliklerim</h2>
        <ul class="list-group">
            @foreach (var musaitlik in ViewBag.Musaitlikler)
            {
                <li class="list-group-item">
                    @musaitlik.BaslangicSaati.ToString("g") -
                    @musaitlik.BitisSaati.ToString("g")
                </li>
            }
        </ul>
    </div>
</div>

<div class="row mt-4">
    
    <div class="col-md-6">
        <h2>Acil Durumlar</h2>
        <ul class="list-group">
            @foreach (var acilDurum in ViewBag.AcilDurumlar)
            {
                <li class="list-group-item">
                    <strong>@acilDurum.Baslik:</strong> @acilDurum.Aciklama
                </li>
            }
        </ul>
    </div>
</div>

<h1>Öğretim Üyesi Takvim</h1>
<div id="calendar-container">
    @Html.Partial("_Calendar")
</div>