@model PediatriYonetimi.Models.Nobet

<h2>Nöbet Düzenle</h2>

<form asp-action="NobetDuzenle" method="post">
    <input asp-for="Id" type="hidden" />
    <div class="form-group">
        <label>Nöbet Tarihi</label>
        <input asp-for="NobetTarihi" type="datetime" class="form-control" />
    </div>
    <div class="form-group">
        <label>Bölüm</label>
        <select asp-for="BolumId" class="form-control" required>
            @if (ViewBag.Bolumler != null)
            {
                @foreach (var bolum in ViewBag.Bolumler)
                {
                    <option value="@bolum.Id">@bolum.BolumAdi</option>
                }
            }
            else
            {
                <option disabled>Bölüm bilgisi yüklenemedi</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Asistan</label>
        <select asp-for="KullaniciId" class="form-control" required>
            @if (ViewBag.Asistanlar != null)
            {
                @foreach (var asistan in ViewBag.Asistanlar)
                {
                    <option value="@asistan.Id">@asistan.Ad @asistan.Soyad</option>
                }
            }
            else
            {
                <option disabled>Asistan bilgisi yüklenemedi</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="NobetListesi" class="btn btn-secondary">Geri Dön</a>
</form>
