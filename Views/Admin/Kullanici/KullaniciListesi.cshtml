@model IEnumerable<PediatriYonetimi.Models.Kullanici>

<h2>Kullanıcı Listesi</h2>
<a asp-action="KullaniciEkle" class="btn btn-success mb-2">Kullanıcı Ekle</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>Adres</th>
            <th>Rol</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kullanici in Model)
        {
            <tr>
                <td>@kullanici.Ad</td>
                <td>@kullanici.Soyad</td>
                <td>@kullanici.Email</td>
                <td>@kullanici.Telefon</td>
                <td>@kullanici.Adres</td>
                <td>@kullanici.Rol</td>
                <td>
                    <a asp-action="KullaniciDuzenle" asp-route-id="@kullanici.Id" class="btn btn-primary btn-sm">Düzenle</a>
                    <a asp-action="KullaniciSil" asp-route-id="@kullanici.Id" class="btn btn-danger btn-sm"
                       onclick="return confirm('Bu kullanıcıyı silmek istediğinize emin misiniz?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
