@model IEnumerable<PediatriYonetimi.Models.Acildurum>

<h2>Acil Duyuru Listesi</h2>
<a asp-action="AcilDuyuruEkle" class="btn btn-success mb-2">Duyuru Ekle</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Tarih</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var duyuru in Model)
        {
            <tr>
                <td>@duyuru.Baslik</td>
                <td>@duyuru.Aciklama</td>
                <td>@duyuru.Tarih.ToString("g")</td>
                <td>
                    <a asp-action="AcilDuyuruSil" asp-route-id="@duyuru.Id" class="btn btn-danger btn-sm"
                       onclick="return confirm('Bu duyuruyu silmek istediğinize emin misiniz?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
