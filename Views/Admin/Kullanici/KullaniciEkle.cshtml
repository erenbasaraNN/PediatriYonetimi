@model PediatriYonetimi.Models.Kullanici

<h2>Kullanıcı Ekle</h2>

<form asp-action="KullaniciEkle" method="post">
    <div class="form-group">
        <label>Ad</label>
        <input asp-for="Ad" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Soyad</label>
        <input asp-for="Soyad" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Telefon</label>
        <input asp-for="Telefon" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Adres</label>
        <input asp-for="Adres" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Rol</label>
        <select asp-for="Rol" class="form-control">
            @foreach (var rol in ViewBag.Roller)
            {
                <option value="@rol">@rol</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="KullaniciListesi" class="btn btn-secondary">Geri Dön</a>
</form>
