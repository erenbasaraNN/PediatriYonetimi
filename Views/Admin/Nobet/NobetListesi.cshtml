@model IEnumerable<PediatriYonetimi.Models.Nobet>

<h2>Nöbet Listesi</h2>
<a asp-action="NobetEkle" class="btn btn-success mb-2">Nöbet Ekle</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nöbet Tarihi</th>
            <th>Bölüm</th>
            <th>Asistan</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var nobet in Model)
        {
            <tr>
                <td>@nobet.NobetTarihi.ToShortDateString()</td>
                <td>@nobet.Bolum.BolumAdi</td>
                <td>@nobet.Asistan.Ad @nobet.Asistan.Soyad</td>
                <td>
                    <a asp-action="NobetDuzenle" asp-route-id="@nobet.Id" class="btn btn-primary btn-sm">Düzenle</a>
                    <a asp-action="NobetSil" asp-route-id="@nobet.Id" class="btn btn-danger btn-sm"
                       onclick="return confirm('Bu nöbeti silmek istediğinize emin misiniz?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
