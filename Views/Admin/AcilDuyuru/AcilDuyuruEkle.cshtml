@model PediatriYonetimi.Models.Acildurum

<h2>Acil Duyuru Ekle</h2>

<form asp-action="AcilDuyuruEkle" method="post">
    <div class="form-group">
        <label>Başlık</label>
        <input asp-for="Baslik" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Açıklama</label>
        <textarea asp-for="Aciklama" class="form-control" rows="5" required></textarea>
    </div>
    <div class="form-group">
        <label>Duyuru Tarihi</label>
        <input asp-for="Tarih" type="datetime" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="AcilDuyuruListesi" class="btn btn-secondary">Geri Dön</a>
</form>
